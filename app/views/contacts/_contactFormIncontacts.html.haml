= form_for @contact do |f|
  = f.label "Как мы можем к Вам обращаться?"
  %br/
  = f.text_field :name, required: true, :class => "ColorContactForm"
  %br/
  = f.label "Ваша электронный адресс, email:"
  %br/
  = f.email_field :email, required: true, :class => "ColorContactForm"
  %br/
  = f.label "Можете дать предварительное описание или вопрос:"
  %br/
  = f.text_area :message, as: :text, :class => "ColorContactForm"
  %br/
  
  = f.label "Ваш контактный номер телефона:"
  %br/
  = f.text_area :phonenumber, as: :text, :class => "ColorContactForm"
  %br/

  .hidden
    = f.label :nickname
    %br/
    = f.text_field :nickname, hint: 'leave this field blank'
  = f.submit 'Send Message',  id: "call"


